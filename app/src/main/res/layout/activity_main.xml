<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#7e97a6"
    >



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="99dp"
        android:layout_weight="0.67"
        android:orientation="vertical"

        >





        <EditText
            android:id="@+id/Etxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:gravity="right"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:textSize="15pt"
            android:textStyle="bold"
            android:background="#85cfcb"
            android:inputType="number"


            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"

        >

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="C"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#be3737"



            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnSeven"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"


            />


        <Button
            android:id="@+id/btnEight"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"
            />


        <Button
            android:id="@+id/btnNine"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1."
            android:text="/"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#53cde2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnFour"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnFive"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnSix"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".98"
            android:text="x"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#e6b31e"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnOne"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnTwo"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnThree"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1."
            android:text="-"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#a287f4"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1.22"
            android:text="."
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnZero"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".98"
            android:text="0"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#63686E"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnEquals"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".95"
            android:text="="
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#ff6473"
            android:textColor="#f9f9f9"/>


        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight=".93"
            android:text="+"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="#fb929e"
            />

    </LinearLayout>

</LinearLayout>